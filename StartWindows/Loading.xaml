<Window x:Class="Main.StartWindows.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Main.StartWindows"
        mc:Ignorable="d"
        Title="Loading" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="CanResizeWithGrip"  AllowsTransparency="True" MouseLeftButtonDown="MoveGrid_MouseLeftButtonDown">
    <Grid>
        <MediaElement Visibility="Visible" x:Name="Media" UnloadedBehavior="Manual" MediaEnded="MediaElement_MediaEnded" Stretch="Fill"></MediaElement>
        <Label x:Name="LoadingLabel" Opacity="0.5" Content="Loading" FontSize="90" Foreground="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"></Label>
    </Grid>
</Window>
