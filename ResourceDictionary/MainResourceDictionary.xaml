    <!--Over Button-->

    <Style TargetType="Button" x:Key="OverBtn">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd" Background="Transparent">
                        <Path VerticalAlignment="Bottom" x:Name="Pt" Height="19.3" Width="Auto" Stretch="Uniform" Data="M535.5,229.5h-459C34.253,229.5,0,263.753,0,306s34.253,76.5,76.5,76.5h459c42.247,0,76.5-34.253,76.5-76.5     S577.747,229.5,535.5,229.5z"
