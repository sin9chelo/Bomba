<Application x:Class="Main.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Main"
             xmlns:custom="clr-namespace:Main.StartWindows"
             StartupUri="\StartWindows\Authorization.xaml">
    <Application.Resources>
        <ControlTemplate x:Key="errorTemplate">
            <Border BorderBrush="#6AD1FE" BorderThickness="0">
                <Grid>
                    <AdornedElementPlaceholder/>
                    <TextBlock Text="{Binding [0].ErrorContent}" Foreground="#6AD1FE"
                               VerticalAlignment="Center" HorizontalAlignment="Right"
                               Margin="0,0,4,0"/>
                </Grid>
            </Border>
        </ControlTemplate>
    </Application.Resources>
</Application>
